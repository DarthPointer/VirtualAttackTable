@using VirtualAttackTableLib.AttackTarget;
@using VirtualAttackTableLib.TargetShipParameter;
@using BlazorWASMAttackTable.Client.Interactions.Common;
@using Blazored.Modal;
@using Blazored.Modal.Services;
@using CallbackList;
@using BlazorWASMAttackTable.Client.Interactions;
@using BlazorWASMAttackTable.Client.Interactions.AttackTableInteractions;
@using BlazorWASMAttackTable.Client.Elements.SubscriptionDisposal;

@inherits SubscriptionDisposingElement

<tr id="attack-table-entry-row">
    <td style="height: inherit;" title="Set absolute dimensions from image" @onclick="RequestShipDimensionsFromImage">
        <img id="attack-table-row-element" style="aspect-ratio: 2/1; object-fit: contain;" src="@BlazorAttackTableLib.GetShipImagePath(TargetShip.TargetShip.Data.TypeName)" />
    </td>

    <td style="height: inherit;">@TargetShip.TargetShip.Data.TypeName.Replace('_', ' ')</td>

    <td style="height: inherit;"><TrivialFloatParameterCell Interaction="TargetShip.Bearing" OwningEntry="this"
        TParameter="AlteredUnitParameterInteraction<BearingDefinition>" TDefinitionKey="BearingDefinition" /></td>

    <td style="height: inherit;"><TrivialFloatParameterCell Interaction="TargetShip.AbsoluteHeight" OwningEntry="this"
        TParameter="AlteredUnitParameterInteraction<AbsoluteHeightDefinition>" TDefinitionKey="AbsoluteHeightDefinition"/></td>

    <td style="height: inherit;"><TrivialFloatParameterCell Interaction="TargetShip.VisibleHeight" OwningEntry="this"
        TParameter="AlteredUnitParameterInteraction<VisibleHeightDefinition>" TDefinitionKey="VisibleHeightDefinition"/></td>

    <td style="height: inherit;"><TrivialFloatParameterCell Interaction="TargetShip.AbsoluteLength" OwningEntry="this"
        TParameter="AlteredUnitParameterInteraction<AbsoluteLengthDefinition>" TDefinitionKey="AbsoluteLengthDefinition"/></td>

    <td style="height: inherit;"><TrivialFloatParameterCell Interaction="TargetShip.VisibleLength" OwningEntry="this"
        TParameter="AlteredUnitParameterInteraction<VisibleLengthDefinition>" TDefinitionKey="VisibleLengthDefinition"/></td>

    <td style="height: inherit;"><TrivialFloatParameterCell Interaction="TargetShip.TargetRange" OwningEntry="this"
        TParameter="AlteredUnitParameterInteraction<TargetRangeDefinition>" TDefinitionKey="TargetRangeDefinition"/></td>

    <td style="height: inherit;">
        <AoBParameterCell Parameter="TargetShip.AoB" OwningEntry="this"/>
    </td>

    <td style="height: inherit;"><TrivialFloatParameterCell Interaction="TargetShip.HullTime" OwningEntry="this"
        TParameter="AlteredUnitParameterInteraction<HullTimeDefinition>" TDefinitionKey="HullTimeDefinition"/></td>

    <td style="height: inherit;"><TrivialFloatParameterCell Interaction="TargetShip.OneDegreeTime" OwningEntry="this"
        TParameter="AlteredUnitParameterInteraction<OneDegreeTimeDefinition>" TDefinitionKey="OneDegreeTimeDefinition"/></td>

    <td style="height: inherit;"><TrivialFloatParameterCell Interaction="TargetShip.TargetSpeed" OwningEntry="this"
        TParameter="AlteredUnitParameterInteraction<TargetSpeedDefinition>" TDefinitionKey="TargetSpeedDefinition"/></td>

    <td style="height: inherit;"><TrivialFloatParameterCell Interaction="TargetShip.AngularSpeed" OwningEntry="this"
        TParameter="AlteredUnitParameterInteraction<AngularSpeedDefinition>" TDefinitionKey="AngularSpeedDefinition"/></td>

    <td style="height: inherit;"><TrivialFloatParameterCell Interaction="TargetShip.TorpedoSpeed" OwningEntry="this"
        TParameter="AlteredUnitParameterInteraction<string>" TDefinitionKey="string"/></td>

    <td style="height: inherit;"><TrivialFloatParameterCell Interaction="TargetShip.BoatSpeed" OwningEntry="this"
        TParameter="AlteredUnitParameterInteraction<BoatSpeedDefinition>" TDefinitionKey="BoatSpeedDefinition"/></td>

    <td style="height: inherit;"><TrivialFloatParameterCell Interaction="TargetShip.LeadAngle" OwningEntry="this"
        TParameter="AlteredUnitParameterInteraction<LeadAngleDefinition>" TDefinitionKey="LeadAngleDefinition"/></td>

    <td style="height: inherit;" title="Remove target" @onclick="RemoveThisTarget"><img src="images/Cross.svg" style="object-fit: contain; height: 100%; width: 100%;" /></td>
</tr>

@code {
    #region Fields
    private IParameterDefinition? _definitionToHighlightParameters;
    #endregion

    #region Properties
    [CascadingParameter]
    public IModalService Modal { get; set; } = null!;

    [Parameter, EditorRequired]
    public TargetShipAlteredUnitsWrap TargetShip { get; set; } = null!;

    [Parameter, EditorRequired]
    public AttackTableInteraction AttackTable { get; set; } = null!;

    public IParameterDefinition? DefinitionToHighlightParameters
    {
        get
        {
            return _definitionToHighlightParameters;
        }
        set
        {
            if (_definitionToHighlightParameters != value)
            {
                _definitionToHighlightParameters = value;
                DefinitionToHighlightParametersChanged();
            }
        }
    }

    public ValueInteraction<IReadOnlySet<IParameter>> ParametersToHighlight { get; } = new(new HashSet<IParameter>());
    #endregion

    #region Methods
    protected override void OnParametersSet()
    {
        ParametersToHighlight.Value = new HashSet<IParameter>();
    }

    private void RemoveThisTarget()
    {
        AttackTable.RemoveTargetShip(TargetShip);
    }

    private void RequestShipDimensionsFromImage()
    {
        ObservationDimensionsFromShipImage.Show(Modal, new(), TargetShip,
            AttackTable.UnitsSelection.AbsoluteLength.SelectedOption.Value!.Value,
            AttackTable.UnitsSelection.AbsoluteHeight.SelectedOption.Value!.Value);
    }

    private void DefinitionToHighlightParametersChanged()
    {
        if (DefinitionToHighlightParameters == null)
        {
            ParametersToHighlight.Value = new HashSet<IParameter>();
        }
        else
        {
            ParametersToHighlight.Value = new HashSet<IParameter>(DefinitionToHighlightParameters.DependencyParameters);
        }
    }
    #endregion
}